<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="arpa.sp1rit.Fidei">
	<schema id="arpa.sp1rit.Fidei" path="/arpa/sp1rit/Fidei/">
		<!-- begin window state -->
		<key name="window-width" type="i">
			<default>1280</default>
			<summary>Default window width</summary>
		</key>
		<key name="window-height" type="i">
			<default>720</default>
			<summary>Default window height</summary>
		</key>
		<key name="is-maximized" type="b">
			<default>false</default>
			<summary>Default window maximized behaviour</summary>
		</key>
		<!-- end window state -->

		<!-- begin bible state -->
		<key name="open-bible" type="s">
			<default>""</default>
			<summary>Identifier of the currently active bible</summary>
		</key>
		<key name="active-chapter" type="(si)">
			<default>("", -1)</default>
			<summary>Identifier of the currently active bible</summary>
		</key>
		<!-- end bible state -->
	</schema>
</schemalist>

